<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:LearningCard.Properties" x:Class="LearningCard.View.MainWindow"
        Title="MainWindow" Height="600" Width="800" MinHeight="300" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="300"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Top"/>
        <UserControl Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding mainContent}">
        </UserControl>
        <StatusBar Grid.Row="4" HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Bottom" />
    </Grid>
</Window>
