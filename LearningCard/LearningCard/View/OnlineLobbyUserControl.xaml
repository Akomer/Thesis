<UserControl x:Class="LearningCard.View.OnlineLobbyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True">
        <Button Content="Start" Margin="10" Padding="5" DockPanel.Dock="Bottom" />
        <ListView DockPanel.Dock="Right" />
        <StackPanel Orientation="Vertical" DockPanel.Dock="Right" />
        <StackPanel Orientation="Vertical">
            <Button Margin="10" Padding="5" Content="Load Card Pack"  HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Active card pack:" />
                <Label Content="Nothing" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Host IP address:" VerticalAlignment="Center"/>
                <Label Content="{Binding HostIpAddres}" VerticalAlignment="Center"/>
                <Button Content="Refresh IP" Margin="5" Padding="2" Command="{Binding Command_RefresIP}" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
